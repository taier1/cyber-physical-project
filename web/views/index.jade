extends layout

block content

  .container-fluid
    tab-content#nav-tabContent
      #nav-air.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='nav-air-tab', style="height: 700px;")
        .row(style="position: relative; top: 50%; transform: translateY(-50%);")
          .col-9
            .mapbox
              #map.dvContainer(style="height: 600px")
          .col-3(style="height: 600px;")
              table.table.bg-light(style="max-height: 600px; display: block; overflow-y: scroll;")
                thead.bg-light(style="position: sticky; top: 0; display: block;")
                  tr
                    th(scope='col') Bike ID
                    th(scope='col') Air Quality
                    th(scope='col') PM10
                    th(scope='col') PM2.5
                tbody#tbody
                tfoot#tfoot.bg-light(style="position: sticky; bottom: 0; display: block;")
                  tr
                    th(scope='row') Average
                    th 0.0
                    th 0.0
                    th 0.0


      #nav-bikes.tab-pane.fade(role='tabpanel', aria-labelledby='nav-users-tab')
        p ciao





  script(src='javascripts/map.js')
